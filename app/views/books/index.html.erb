<% if flash[:notice] %>
    <div class="flash">
        <%= flash[:notice] %>
    </div>
<% end  %>

<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  <tr>
    <td>トラブル知らずのシステム設計</td>
    <td>システム設計の要点を図解で説明してくれます</td>
    <td><%= link_to "Show", "" %></td>
    <td><%= link_to "Edit", "" %></td>
    <td><%= link_to "Destroy", "" %></td>
  </tr>


  <% @books.each do |book|  %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book) %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
  <% end %>

</table>

<div>
  <h1>New Book</h1>
  <% if @book.errors.any? %>
      <%= @book.errors.count %>error prohibited this book from being saved:
      <%= @book.errors.full_messages.each do |message| %>
      <ul>
        <%= message %>
      </ul>
      <% end %>
    <% end  %>
  <%= form_with model:@book, local:true do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %>
    <br>
    <%= f.submit "Create Book" %>
  <% end  %>
</div>
