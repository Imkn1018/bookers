<h1>Editing Book</h1>
 <% if @book.errors.any? %>
    <div class="error_modal">
      <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
          <ul>
            <%= @book.errors.full_messages.each do |message| %>
            <li>
              <%= message %>
            </li>
            <% end %>
          </ul>
    </div>
    <% end  %>
<%= form_with model:@book, local:true do |f| %>
    <div class="error_form">
        <p>Title</p>
        <div class="error_field"><%= f.text_field :title %></div>
    </div>
    <div class="error_form">
        <p>Body</p>
        <div class="error_field"><%= f.text_area :body %></div>
    </div>
    <br>
    <%= f.submit "Update Book" %>
<% end  %>

<span>
    <%= link_to "Show", book_path %>|<%= link_to "back", books_path  %>
</span>
