<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %>
    <br>
    <%= f.submit "Update Book" %>
<% end  %>

<span>
    <%= link_to "Show", book_path %>|<%= link_to "back", books_path  %>
</span>
